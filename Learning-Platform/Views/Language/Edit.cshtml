@model LearningPlatform.Models.Language

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Language</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="language_id" />
            <div class="form-group">
                <label asp-for="language_name" class="control-label"></label>
                <input asp-for="language_name" class="form-control" />
                <span asp-validation-for="language_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="country_of_origin" class="control-label"></label>
                <input asp-for="country_of_origin" class="form-control" />
                <span asp-validation-for="country_of_origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="difficulty_level" class="control-label"></label>
                <input asp-for="difficulty_level" class="form-control" />
                <span asp-validation-for="difficulty_level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
